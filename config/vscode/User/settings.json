// User Settings (All Platforms)
{
  // Updated at: 2022-07-11 02:11:28 +02:00

  // ##################
  // ###  Behavior  ###
  // ##################

  "editor.fontFamily": "DejaVu Sans Mono for Powerline", // or "Consolas",
  "editor.fontSize": 14,
  "editor.lineNumbers": "on",
  "editor.mouseWheelZoom": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80, 100, 120],
  "editor.suggestSelection": "first",
  "editor.tabSize": 4,
  "editor.wordWrap": "off",
  "editor.wrappingIndent": "indent",
  "files.autoSave": "off",
  "files.autoSaveDelay": 5000, // Not applicable when autosave: "off"
  "files.eol": "auto",
  "files.insertFinalNewline": false,
  "search.collapseResults": "auto",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.startupEditor": "none",

  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  "[python]": {
    "editor.tabSize": 4,
    "editor.rulers": [80, 100, 120],
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
  },

  // ===========================================================================

  // ###############
  // ###  Style  ###
  // ###############

  "workbench.colorTheme": "Visual Studio Dark",
  "workbench.colorCustomizations": {
    /*
      Colors:
        #1A237E Indigo
        #33691E Light Green
        #B71C1C Red
        #4A148C Purple

      Material colors;
        https://material.io/design/color/the-color-system.html#tools-for-picking-colors
    */
    "[Visual Studio Dark]": {
      "activityBar.background": "#202020",
      "activityBar.activeBackground": "#404040",
      "titleBar.activeBackground": "#3c3c3c",

      "statusBar.background": "#263238",
      "statusBar.debuggingBackground": "#6A1B9A",

      "quickInputList.focusBackground": "#1A237E",
      "list.hoverBackground": "#001064"
    }
  },

  // ===========================================================================

  // ##################
  // ###  Terminal  ###
  // ##################

  "terminal.integrated.fontFamily": "DejaVu Sans Mono for Powerline",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.scrollback": 100000,
  "terminal.integrated.enablePersistentSessions": true,
  "terminal.integrated.persistentSessionReviveProcess": "onExit",
  "terminal.integrated.persistentSessionScrollback": 100000,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "overrideName": true
    },
    "Dev Box": {
      "source": "PowerShell",
      "overrideName": true,
      "args": ["-File", "${env:home}\\scripts\\ssh-devbox.ps1"]
    },
    "Dev Box Jupyter": {
      "source": "PowerShell",
      "overrideName": true,
      "args": ["-File", "${env:home}\\scripts\\ssh-devbox-jupyter.ps1"]
    },
    "cmd": {
      "overrideName": true,
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": []
    }
  },

  // ===========================================================================

  // ###############
  // ###  Files  ###
  // ###############

  "files.exclude": {
    "**/*.pyc": true,
    "**/__pycache__": true
  },
  "files.watcherExclude": {
    "**/*.pyc": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/__pycache__/**": true,
    "**/node_modules/*/**": true
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "files.associations": {
    "*.text": "plaintext",
    "*.txt": "plaintext",
    "*.kql": "dotnet-interactive.kql"
  },

  // ===========================================================================

  // ###########################
  // ###  Extensions Config  ###
  // ###########################

  // vim:
  // ====
  // "vim.vimrc.enable": true, # Causes extension to not work
  "vim.foldfix": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.leader": " ",
  "vim.showMarksInGutter": true,
  "vim.useSystemClipboard": false,

  "vim.handleKeys": {
    "<C-a>": false,
    "<C-b>": false,
    "<C-c>": false,
    "<C-f>": false,
    "<C-t>": false,
    "<C-w>": false,
    "<C-x>": false,

    // Enabled (handled by vim)
    "<C-d>": true,
    "<C-e>": true,
    "<C-u>": true,
    "<C-y>": true
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["leader"], "after": ["\"", "+"] }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["leader"], "after": ["\"", "+"] }
  ],

  // Python:
  // =======
  "python.languageServer": "Pylance",
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    "--max-line-length",
    "120",
    "--experimental",
    "--aggressive",
  ],
  "python.defaultInterpreterPath": "${env:PYENV_ROOT}/versions/3.7.13/bin/python",
  "python.pythonPath": "${env:PYENV_ROOT}/versions/3.7.13/bin/python",
  // "python.pythonPath": "${env:HOME}/.pyenv/shims/python", // TODO: Remove
  // "python.pythonPath": "${env:HOME}/.pyenv/versions/3.7.13/bin/python", // TODO: Remove

  // Prettier
  // =============
  "prettier.useTabs": false,
  // "prettier.tabWidth": 4,
  // "prettier.singleQuote": true,
  // "prettier.trailingComma": "all"

