// User Settings (All Platforms)
{
    // ##################
    // ###  Behavior  ###
    // ##################
    "files.autoSave": "off",
    "files.autoSaveDelay": 5000, // Not applicable when autosave: "off"
    "files.eol": "auto",
    "files.insertFinalNewline": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.startupEditor": "none",
    "editor.mouseWheelZoom": true,

    // ####################
    // ###  Appearance  ###
    // ####################
    "window.zoomLevel": 1,
    "editor.fontFamily": "DejaVu Sans Mono for Powerline", // or "Consolas",
    "editor.fontSize": 14,
    "editor.lineNumbers": "on",
    "editor.tabSize": 4,
    "editor.renderWhitespace": "all",
    "editor.wrappingIndent": "indent",
    "editor.rulers": [80, 100, 120],
    "editor.wordWrap": "off",
    "diffEditor.renderSideBySide": false,

    "[python]": {
        "editor.tabSize": 4,
        "editor.rulers": [80, 100, 120],
    },

    // ###############
    // ###  Style  ###
    // ###############
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.colorCustomizations": {
        "[Visual Studio Dark]": {
            "quickInputList.focusBackground": "#1A237E",
            "list.hoverBackground": "#001064",

            "activityBar.background": "#202020",
            "activityBar.activeBackground": "#404040",

            "statusBar.background": "#263238",
            "statusBar.debuggingBackground": "#6A1B9A",
        }
    },

    // ##################
    // ###  Terminal  ###
    // ##################
    "terminal.integrated.fontFamily": "DejaVu Sans Mono for Powerline",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "overrideName": true,
        },
        "Dev Box": {
            "source": "PowerShell",
            "overrideName": true,
            "args": [
                "-File", "${env:home}\\scripts\\ssh-devbox.ps1",
            ],
        },
        "Dev Box Jupyter": {
            "source": "PowerShell",
            "overrideName": true,
            "args": [
                "-File", "${env:home}\\scripts\\ssh-devbox-jupyter.ps1",
            ],
        },
        "cmd": {
            "overrideName": true,
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe",
            ],
            "args": [],
        },
    },

    // ###############
    // ###  Files  ###
    // ###############
    "files.exclude": {
        "**/*.pyc": true,
        "**/__pycache__": true,
    },
    "files.watcherExclude": {
        "**/*.pyc": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.hg/store/**": true,
        "**/__pycache__/**": true,
        "**/node_modules/*/**": true,
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "files.associations": {
        ".text": "txt",
    },

    // ###########################
    // ###  Extensions Config  ###
    // ###########################

    // vim:
    // ====
    // "vim.vimrc.enable": true, # Causes extension to not work
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": false,
    "vim.foldfix": true,
    "vim.leader": " ",
    "vim.showMarksInGutter": true,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-b>": false,
        "<C-c>": false,
        "<C-f>": false,
        "<C-t>": false,
        "<C-w>": false,
        "<C-x>": false,

        // Enabled (handled by vim)
        "<C-d>": true,
        "<C-e>": true,
        "<C-u>": true,
        "<C-y>": true,
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": [ "leader" ], "after": [ "\"", "+" ] },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": [ "leader" ], "after": [ "\"", "+" ] },
    ],

    // Python:
    // =======
    "python.languageServer": "Pylance",
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length", "120",
        "--experimental",
    ],
    "python.defaultInterpreterPath": "${env:PYENV_ROOT}/versions/3.7.10/bin/python",
    "python.pythonPath": "${env:PYENV_ROOT}/versions/3.7.10/bin/python",
    // "python.pythonPath": "${env:HOME}/.pyenv/shims/python", // TODO: Remove
    // "python.pythonPath": "${env:HOME}/.pyenv/versions/3.7.10/bin/python", // TODO: Remove

    // Remote - SSH:
    // =============
    "remote.SSH.remotePlatform": {
        "main": "linux",
        "dell": "linux",
        "mt-gpu": "linux",
        "ITP": "linux",
    },

    // Code Spell Checker:
    // ===================
    "cSpell.enabled": true,
    "cSpell.userWords": [
        "Apim",
        "CUDA",
        "EVAL",
        "NLTK",
        "Onnx",
        "PREPROCESS",
        "Popen",
        "XGLUE",
        "XTREME",
        "amralaa",
        "bufsize",
        "datefmt",
        "dtype",
        "fmeasure",
        "gmtime",
        "itertools",
        "kwargs",
        "mainzprmblob",
        "mbart",
        "mkdir",
        "ngram",
        "numpy",
        "pycountry",
        "repos",
        "tqdm",
        "unsqueeze",
        "westus",
        "xargs",
        "zcode"
    ],

    // CMake:
    // ======
    "cmake.generator": "Unix Makefiles",
    "cmake.preferredGenerators": [
        "Unix Makefiles",
    ],
    "cmake.configureArgs": [
        "-G", "Unix Makefiles",
    ],

    // Other Extensions:
    // =================
    "jupyter.allowUnauthorizedRemoteConnection": true,

    // ###############
    // ###  Other  ###
    // ###############
    "editor.accessibilitySupport": "off",
    "git.autofetch": true,
    "keyboard.dispatch": "keyCode", // Fixed: caps:escape not working on Ubuntu

    // ###################
    // ###  Temporary  ###
    // ###################
    // "debug.inlineValues": true,

    "__APPEND_NEW_SETTINGS_HERE__": "__APPEND_NEW_SETTINGS_HERE__",
}