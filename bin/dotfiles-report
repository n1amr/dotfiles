#!/bin/bash

set -e

source ~/.dotfiles.env

subject="$1"

if [[ -n "$DOTFILES_ENV" ]]; then
    subject="[$DOTFILES_ENV] $subject"
fi

body="$({
    echo "Environment: $DOTFILES_ENV"
    echo "Time: $(date -Isec)"
    echo ""
    echo "content:"
    echo "========"
    echo ""
    cat
})"

echo "$body" | tee -a "$DOTFILES_HOME/logs/reports" |
    send-notification "$subject"
