#!/bin/bash

set -eu

if [ "$#" -eq 0 ]; then
    echo "Usage: $0 [--move|--gzip] files..." >&2
    exit 1
fi

_new_path() {
    local file="$1"
    echo "${file}.bak.$(date --utc +"%Y%m%d%H%M%S")"
}

_bak_copy() {
    for arg in "$@"; do
        dst="$(_new_path "$arg")"
        cp -ir "$arg" "$dst"
        echo "$dst"
    done
}

_bak_move() {
    for arg in "$@"; do
        dst="$(_new_path "$arg")"
        mv -i "$arg" "$dst"
        echo "$dst"
    done
}

_bak_gzip() {
    for arg in "$@"; do
        dst="$(_new_path "$arg").gz"
        if [[ -d "$arg" ]]; then
            dir="$(realpath -s "$arg")"
            tmp_root="$(_bak_copy "$dir")"
            ( cd "$(dirname "$tmp_root")"
                tar -zcvf "$(basename "$tmp_root").tar.gz" "$(basename "$tmp_root")"
            ) >&2
            rm -rf "$tmp_root"
        else
            gzip < "$arg" > "$dst"
        fi
        echo "$dst"
    done
}

if [ "$1" = '--move' ]; then
    shift
    _bak_move "$@"
elif [ "$1" = '--gzip' ]; then
    shift
    _bak_gzip "$@"
else
    _bak_copy "$@"
fi
